<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.fp29499x.projectfebry.Clothing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="16dp"
        android:layout_weight="0">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mainclothes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/openingclothing"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="#80ffffff"
            android:textAlignment="center"/>
    </RelativeLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_weight="1"
        android:onClick="disney">

        <ImageView
            android:id="@+id/gambarsatu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/disney"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disney Looks"
            android:shadowColor="#000000"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:background="#80ffffff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_weight="1"
        android:onClick="superhero">

        <ImageView
            android:id="@+id/gambardua"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/superhero"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Hero"
            android:shadowColor="#000000"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:background="#80ffffff"/>
    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:onClick="singer">

            <ImageView
                android:id="@+id/gambartiga"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/singer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Singer 90s"
                android:shadowColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:background="#80ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:onClick="animal">

            <ImageView
                android:id="@+id/gambarempat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/animal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Animal"
                android:shadowColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:background="#80ffffff"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:onClick="sleeping">

            <ImageView
                android:id="@+id/gambartiga"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sleeping"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleeping"
                android:shadowColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:background="#80ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:onClick="party">

            <ImageView
                android:id="@+id/gambarempat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/party"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party"
                android:shadowColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:background="#80ffffff"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>